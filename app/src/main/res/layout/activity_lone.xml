<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loop.LOneAct"
    android:background="@drawable/baaac">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent">


    <EditText
        android:id="@+id/nameET"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:fontFamily="@font/ibm"
        android:hint="Enter your name"
        android:gravity="center"
        android:background="#1677C5"
        android:textColor="#68FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="24sp" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/strtGm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#1677C5"
        android:fontFamily="@font/ibm"
        android:text="Play the game"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvname" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:fontFamily="@font/ibm"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="10"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/cvname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>